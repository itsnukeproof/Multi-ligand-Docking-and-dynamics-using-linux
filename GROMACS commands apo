gmx pdb2gmx -f rec.pdb -o rec_processed.gro -water spce

gmx editconf -f rec_processed.gro -o rec_newbox.gro -c -d 1.0 -bt cubic

gmx solvate -cp rec_newbox.gro -cs spc216.gro -o rec_solv.gro -p topol.top

gmx grompp -f ions.mdp -c rec_solv.gro -p topol.top -o ions.tpr

gmx genion -s ions.tpr -o rec_solv_ions.gro -p topol.top -pname SOD -nname CLA -neutral
choose "13" SOL

gmx grompp -f em.mdp -c rec_solv_ions.gro -p topol.top -o em.tpr

gmx mdrun -v -deffnm em -nt 14
writing lowest energy coordinates.

